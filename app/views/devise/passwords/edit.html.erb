<h2><%= title t('.change_your_password') %></h2>
<hr/>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
    <%= devise_error_messages! %>
    <%= f.input :reset_password_token, as: :hidden %>

    <%= f.input :password, as: :password, autocomplete: 'off' %>
    <%= f.input :password_confirmation, as: :password, autocomplete: 'off', hint: t('.confirm_new_password') %>

    <%= f.button :submit, t('.change_my_password') %>

<% end %>

<%= render 'devise/shared/links' %>
