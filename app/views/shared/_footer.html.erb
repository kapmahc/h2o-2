<hr/>
<footer>
  <p class="float-right">
    <%= t '.all-languages' %>:
    <% Setting.languages.each do |k, v| %>
        <%= link_to v, root_path(locale: k), target: :_blank %>
    <% end %>
  </p>
  <p>
    &copy; <%= Setting["#{locale}.site.copyright"] %>
    <% links = Setting["#{locale}.footer.links"] %>
    <% if links %>
        <% links.each do |l| %>
            &middot; <%= link_to l.fetch('label'), l.fetch('href'), target: :_blank %>
        <% end %>
    <% end %>
  </p>
</footer>