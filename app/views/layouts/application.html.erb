<!DOCTYPE html>
<html lang="<%= locale %>">
<head>
  <%= display_meta_tags site: Setting["#{locale}.site.title"],
                        description: Setting["#{locale}.site.description"],
                        keywords: Setting["#{locale}.site.keywords"],
                        reverse: true %>
  <link rel="icon" type="image/png" href="/favicon.png"/>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="container">
  <%= render 'shared/flash' %>
  <%= yield %>
  <%= render 'shared/footer' %>
</div>
</body>
</html>
