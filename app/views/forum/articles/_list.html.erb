<div class="card-columns">
  <% items.each do |it| %>
      <div class="card">
        <div class="card-block">
          <h4 class="card-title"><%= link_to it.title, forum_article_path(it)%></h4>
          <p><%= md2ht it.body%></p>
          <%= link_to t('buttons.show'), forum_article_path(it), class: 'btn btn-secondary', target: :_blank%>
        </div>
      </div>
  <% end %>
</div>